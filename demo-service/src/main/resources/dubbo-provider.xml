<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo
       http://dubbo.apache.org/schema/dubbo/dubbo.xsd">
<!-- 注册中心信息在properties文件中指定，boot会自动加载
    &lt;!&ndash; 提供方应用信息，用于计算依赖关系 &ndash;&gt;
    <dubbo:application name="${dubbo.application.name}"  />

    &lt;!&ndash; 注册中心暴露服务地址 &ndash;&gt;
    <dubbo:registry address="${dubbo.registry.address}" check="false" file="false"
                    group="${dubbo.registry.group}"/>

    &lt;!&ndash; 用dubbo协议在20881端口暴露服务 &ndash;&gt;
    <dubbo:protocol name="dubbo" port="20881" />-->

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.mwp.demo.service.DemoService" ref="demoService"
                   group="${dubbo.provider.group}" />
    <dubbo:service interface="com.mwp.demo.api.MyCache.LocalCacheApi" ref="localCacheApi"
                   group="${dubbo.provider.group}" />
</beans>